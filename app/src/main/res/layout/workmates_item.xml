<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_list_workmates_view_item_card"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="1dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="4dp">


        <!-- Workmate Photo -->
        <ImageView
            android:id="@+id/fragment_list_workmates_view_item_workmate_photo"
            android:scaleType="centerCrop"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="80dp"
            android:src="@drawable/ic_baseline_perm_identity_24"
            android:layout_height="80dp"
            android:layout_margin="3dp"/>

        <TextView
            android:id="@+id/fragment_list_workmates_view_item_workmate_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:hint="workmates_hasn_t_decided_yet"/>



    </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>



</androidx.appcompat.widget.LinearLayoutCompat>

