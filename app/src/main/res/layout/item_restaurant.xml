<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_5"
            android:layout_weight="60"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restaurant_name"
                style="@style/item_text_style"
                android:maxLength="30"
                tools:text="le zinc" />

            <TextView
                android:id="@+id/restaurant_category_and_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/text_size_12"
                tools:text="french - 21 rue du bordage lucas" />

            <TextView
                android:id="@+id/restaurant_hour"
                style="@style/item_text_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="open" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restaurant_distance"
                style="@style/distance_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="120m" />

            <LinearLayout
                android:id="@+id/worker_icon_item_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/workers_number"
                    style="@style/item_workers_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_baseline_perm_identity_24"
                    tools:text="(2)" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/stars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star_1"
                    style="@style/stars"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/star_2"
                    style="@style/stars"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/star_3"
                    style="@style/stars"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/restaurant_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/image_restaurant"
            android:layout_margin="5dp"
            android:layout_weight="20"
            android:contentDescription="@string/restaurant_image"
            android:src="@drawable/ic_baseline_restaurant_24" />

    </LinearLayout>

</androidx.cardview.widget.CardView>