<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/design"
    tools:context=".view.activities.ConnectionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- BACKGROUND PICTURE -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/atable"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:scaleX="1.2"
            tools:ignore="ContentDescription" />

        <!-- MAIN CONTAINER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- LOGO GO4LUNCH and slogan -->

            <ImageView
                android:layout_width="@dimen/logo_width"
                android:layout_height="@dimen/logo_width"
                android:layout_marginTop="@dimen/margin_50"
                app:srcCompat="@drawable/bolrestaurant"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/text_style_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go4lunch" />

            <TextView
                style="@style/text_style_slogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slogan" />

            <LinearLayout
                android:id="@+id/layout_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/email_login_button"
                    style="@style/button_style_connexion"
                    android:layout_width="@dimen/logo_width"
                    android:layout_height="@dimen/button_height_45"
                    android:background="@drawable/fui_idp_button_background_email"
                    android:text="EMAIL" />


                <Button
                    android:id="@+id/google_login_button"
                    style="@style/button_style_connexion"
                    android:layout_width="@dimen/logo_width"
                    android:layout_height="@dimen/button_height_45"
                    android:background="@drawable/googleg_standard_color_18"
                    android:text="GOOGLE" />

                <Button
                    android:id="@+id/facebook_login_button"
                    style="@style/button_style_connexion"
                    android:layout_width="@dimen/logo_width"
                    android:layout_height="@dimen/button_height_45"
                    android:background="@drawable/fui_idp_button_background_facebook"
                    android:text="Facebook" />

                <Button
                    android:id="@+id/twitter_login_button"
                    style="@style/button_style_connexion"
                    android:layout_width="@dimen/logo_width"
                    android:layout_height="@dimen/button_height_45"
                    android:background="@drawable/fui_idp_button_background_twitter"
                    android:text="TWITER" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


