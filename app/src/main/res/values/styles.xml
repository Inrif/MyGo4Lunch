<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
    </style>

    <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>
    <!-- restaurant list -->
    <string name="restaurant_image">restaurant Image</string>
    <string name="restaurant_open">Restaurant open</string>
    <string name="not_open_yet">Not open yet</string>

    <!-- item -->
    <style name="item_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_text_open">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="distance_style">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="item_workers_style">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="stars">
        <item name="android:layout_height">@dimen/image_button_20</item>
        <item name="android:layout_width">@dimen/image_button_20</item>
        <item name="android:src">@drawable/ic_baseline_stars_24</item>
    </style>

    <string name="filter_restaurant_by">Filter restaurant by :</string>
    <string name="no_star">No star</string>
    <string name="_1">1 star</string>
    <string name="_2">2 stars</string>
    <string name="_3">3 stars</string>
    <string name="no_filter">No filter</string>
    <string name="no_worker_has_chosen_this_restaurant">No Worker has chosen this restaurant</string>
    <string name="no_restaurant_for_this_filter_selection">No restaurant for this filter selection</string>

    <!-- List filter style -->
    <style name="list_filter">
        <item name="android:layout_margin">@dimen/margin_start_10</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>


    <!-- Connexion STYLE -->
    <style name="text_style_logo">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_logo_63</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_style_slogan">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="button_style_connexion">
        <item name="android:layout_marginStart">@dimen/margin_start_40</item>
        <item name="android:layout_marginTop">@dimen/margin_start_10</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_40</item>
        <item name="android:padding">@dimen/padding_10</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textStyle">normal</item>
    </style>


    <!-- STYLE SIGN-IN ACTIVITY -->
    <style name="LoginTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <!-- workers -->
    <style name="worker_image">
        <item name="android:layout_width">@dimen/image_button_50</item>
        <item name="android:layout_height">@dimen/image_button_50</item>
        <item name="android:layout_marginStart">@dimen/margin_fab_16</item>
        <item name="android:layout_marginTop">@dimen/margin_start_10</item>
        <item name="android:layout_marginBottom">@dimen/margin_start_10</item>
    </style>

    <style name="worker_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_top_20</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- detail page style -->
    <style name="detail_text_style">
        <item name="android:layout_marginStart">@dimen/margin_start_10</item>
        <item name="android:layout_marginTop">@dimen/margin_top_15</item>
        <item name="android:textColor">@color/quantum_white_100</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="text_adress_style">
        <item name="android:layout_margin">@dimen/margin_start_10</item>
        <item name="android:layout_marginStart">@dimen/margin_top_20</item>
        <item name="android:layout_marginTop">@dimen/margin_top_15</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="text_style_button_detail">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>